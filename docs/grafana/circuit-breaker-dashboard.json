{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Circuit Breaker Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "circuit_breaker_state{service=~\"$service\"}",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "CLOSED", "color": "green" } } },
            { "type": "value", "options": { "1": { "text": "HALF-OPEN", "color": "yellow" } } },
            { "type": "value", "options": { "2": { "text": "OPEN", "color": "red" } } }
          ]
        }
      }
    },
    {
      "title": "Circuit Breaker Trips / 5m",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "rate(circuit_breaker_trips_total{service=~\"$service\"}[5m])",
          "legendFormat": "{{service}} trips"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "fillOpacity": 10 },
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "title": "External Service Latency (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(external_request_duration_seconds_bucket{service=~\"$service\"}[5m]))",
          "legendFormat": "{{service}} p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "drawStyle": "line", "fillOpacity": 5 }
        }
      }
    },
    {
      "title": "Error Rate by Service",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "rate(external_request_errors_total{service=~\"$service\"}[5m])",
          "legendFormat": "{{service}} errors/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "bars", "fillOpacity": 50 },
          "color": { "fixedColor": "red", "mode": "fixed" }
        }
      }
    },
    {
      "title": "Retry Queue Depth",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "job_queue_pending_total{job_type=~\".*\"}",
          "legendFormat": "{{job_type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      }
    },
    {
      "title": "Recovery Time (last CB close)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "time() - circuit_breaker_last_state_change_timestamp{state=\"closed\",service=~\"$service\"}",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "custom",
        "current": { "text": "All", "value": "$__all" },
        "options": [
          { "text": "openai", "value": "openai" },
          { "text": "stripe", "value": "stripe" },
          { "text": "resend", "value": "resend" }
        ],
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Circuit Breaker Metrics",
  "uid": "immoflow-circuit-breaker",
  "version": 1
}
