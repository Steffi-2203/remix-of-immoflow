# ===========================================
# ImmoflowMe Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===== DATABASE =====
DATABASE_URL=postgresql://user:password@host:5432/immoflowme
# Optional: pooler URL for transaction pooling (PgBouncer/Supavisor, port 6543)
# DATABASE_POOLER_URL=postgresql://user:password@host:6543/immoflowme?pgbouncer=true

# ===== SESSION =====
SESSION_SECRET=your-secure-session-secret-min-32-chars

# ===== STRIPE (via Replit Integration) =====
# Org-based subscription pricing
STRIPE_PRICE_STARTER_MONTHLY=price_xxx
STRIPE_PRICE_STARTER_YEARLY=price_xxx
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_PRO_YEARLY=price_xxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxx

# User-based subscription pricing
STRIPE_USER_PRICE_STARTER=price_xxx
STRIPE_USER_PRICE_PRO=price_xxx

# ===== RESEND EMAIL (via Replit Integration) =====
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=noreply@immoflowme.com

# ===== OPENAI / AI (via Replit Integration) =====
# These are auto-configured by Replit AI Integrations
# AI_INTEGRATIONS_OPENAI_API_KEY=sk-xxx
# AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# ===== INTERNAL CRON =====
INTERNAL_CRON_SECRET=your-cron-secret

# ===== REPLIT (auto-set by platform) =====
# REPLIT_DEV_DOMAIN=xxx.replit.dev
# REPLIT_DOMAINS=xxx.replit.app
# REPL_SLUG=immoflowme
# REPL_OWNER=username
# REPLIT_DEPLOYMENT=1 (in production)
